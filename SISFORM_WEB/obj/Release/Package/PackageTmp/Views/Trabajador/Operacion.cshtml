@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Modals start -->
@section modals{
    <div class="modal modal-full ie-scroll-fix" id="trabajadorPuesto-modal" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content w-lg-three-quarter">
                <a href="#" class="close" role="button" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 offset-sm-1">
                            <h5 class="modal-title">Registro puesto del trabajador</h5>
                            <div class="form-row">
                                <div class="col-sm">
                                    <label for="txtIdTrabajadorPuesto">Codigo</label>
                                    <input type="text" class="form-control form-control-sm P" id="txtIdTrabajadorPuesto" placeholder="Codigo" readonly="readonly">
                                </div>
                                <div class="col-sm">
                                    <label for="cboEmpresa" class="required">Empresa</label>
                                    <input type="text" class="form-control form-control-sm P" id="txtbuscarPorEmpresa" placeholder="Empresa" required="required" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtPuestoTrabajo" class="required">Puesto de trabajo</label>
                                    @*<input type="text" class="form-control form-control-sm P" id="txtPuestoTrabajo" placeholder="Empresa" required="required" />*@
                                    <select class="form-control form-control-sm P" id="cboPuestoTrabajo" required="required"></select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-sm">
                                    <label for="txtFechaIngreso" class="required">Fecha de ingreso</label>
                                    <input type="date" class="form-control form-control-sm P" id="txtFechaIngreso" required="required" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtFechaSalida">Fecha de salida</label>
                                    <input type="date" class="form-control form-control-sm P" id="txtFechaSalida" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtEstadoPuesto" class="required">Estado</label>
                                    <div class="custom-control">
                                        <div class="custom-switch">
                                            <input type="checkbox" id="txtEstadoPuesto" checked>
                                            <label for="txtEstadoPuesto">Estado</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <input class="btn btn-success" type="button" id="btnGrabarPuesto" value="Guardar">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <hr class="mb-20" />
                </div>
                <div class="mw-full">
                    <div class="card p-0 bg-very-dark-dm">
                        <div id="divTablaPuestos" class="table-responsive">
                            <table id="tablaDatosPuestos" class="table table-inner-bordered">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "trabajadores";
    </script>
}
<!-- Modals end -->

<div class="content">
    <div class="title"><h5>Registro de trabajadores</h5></div>
    <div class="form-row">
        <div class="col-sm">
            <label for="cboTipoDocumento" class="required">Tipo de documento</label>
            <select class="form-control form-control-sm T" id="cboTipoDocumento" required="required"></select>
        </div>
        <div class="col-sm">
            <label for="txtNuDoc" class="required">N° Documento</label>
            <input type="text" class="form-control form-control-sm T" id="txtNuDoc" placeholder="N° Documento" required="required" onkeypress="consulta(event)" />
        </div>
        <div class="col-sm">
            <label for="txtNombre" class="required">Nombre</label>
            <input type="text" class="form-control form-control-sm T" id="txtNombre" placeholder="Nombre" required="required" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm">
            <label for="txtApePaterno" class="required">Apellido Paterno</label>
            <input type="text" class="form-control form-control-sm T" id="txtApePaterno" placeholder="Apellido Paterno" required="required" />
        </div>
        <div class="col-sm">
            <label for="txtApeMaterno" class="required">Apellido Materno</label>
            <input type="text" class="form-control form-control-sm T" id="txtApeMaterno" placeholder="Apellido Materno" required="required" />
        </div>
        <div class="col-sm">
            <label for="dtFecNac" class="required">Fecha de nacimiento</label>
            <input type="date" class="form-control form-control-sm T" id="dtFecNac" required="required" />
        </div>
    </div>
    <div>
        <label for="cboDpto" class="required">Lugar de procedencia</label>
        <div class="form-row">
            <div class="col-sm">
                <select class="form-control form-control-sm T" id="cboDepartamento" required="required"></select>
            </div>
            <div class="col-sm">
                <select class="form-control form-control-sm T" id="cboProvincia" required="required"></select>
            </div>
            <div class="col-sm">
                <select class="form-control form-control-sm T" id="cboDistrito" required="required"></select>
            </div>
            <div class="col-sm">
                <input type="text" class="form-control form-control-sm T" id="txtReferencia" placeholder="Referencia" required="required" />
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm">
            <label for="txtTelefono" class="required">Telefono</label>
            <input type="text" class="form-control form-control-sm T" id="txtTelefono" placeholder="Telefono" required="required" pattern="[0-9]*" inputmode="numeric" />
        </div>
        <div class="col-sm">
            <label for="txtDireccion" class="required">Direccion</label>
            <input type="text" class="form-control form-control-sm T" id="txtDireccion" placeholder="Direccion" required="required" />
        </div>
        <div class="col-sm">
            <label for="txtEstado" class="required">Estado</label>
            <div class="custom-control">
                <div class="custom-switch">
                    <input type="checkbox" id="txtEstado" checked>
                    <label for="txtEstado">Estado</label>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4">
            <label for="txtFamiliarContacto" class="required">Familiar Contacto</label>
            <input type="text" class="form-control form-control-sm T" id="txtFamiliarContacto" placeholder="Familiar Contacto" required="required" />
        </div>
        <div class="col-sm-4">
            <label for="txtTelefonoContacto" class="required">Telefono Contacto</label>
            <input type="text" class="form-control form-control-sm T" id="txtTelefonoContacto" placeholder="Telefono" required="required" pattern="[0-9]*" inputmode="numeric" />
        </div>
        <div class="col-sm-4">
            <label for="cboUnidadGestion" class="required">Unidad de Gestion</label>
            <select class="form-control form-control-sm T" id="cboUnidadGestion" required="required"></select>
        </div>
    </div>
    <div class="text-right">
        <input class="btn btn-primary" id="btnNuevo" type="button" value="Nuevo" style="visibility:hidden">
        <a href="#trabajadorPuesto-modal" class="btn btn-secondary" id="btnModal" role="button" style="visibility:hidden">Asignar Puesto</a>
        <input class="btn btn-success" id="btnGrabar" type="button" value="Guardar">
    </div>
</div>
<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
@section scripts{
    @Scripts.Render("~/Scripts/ConsultaTrabajador.js")
}
