@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Modals start -->
@section modals{
    <div class="modal modal-full ie-scroll-fix" id="agregarpuestotrabajo-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content w-lg-three-quarter">
                <a href="#" class="close" role="button" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 offset-sm-1">
                            <h5 class="modal-title">Registro puesto del trabajador</h5>
                            <div class="form-row">
                                <div class="col-sm">
                                    <label for="txtIdTrabajadorPuesto">Codigo</label>
                                    <input type="text" class="form-control form-control-sm P" id="txtIdTrabajadorPuesto" placeholder="Codigo" readonly="readonly">
                                </div>
                                <div class="col-sm">
                                    <label for="cboEmpresa" class="required">Empresa</label>
                                    <select class="form-control form-control-sm P" id="cboEmpresa" required="required"></select>
                                </div>
                                <div class="col-sm">
                                    <label for="cboPuestoTrabajo" class="required">Puesto de trabajo</label>
                                    <select class="form-control form-control-sm P" id="cboPuestoTrabajo" required="required"></select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-sm">
                                    <label for="txtFechaIngreso" class="required">Fecha de ingreso</label>
                                    <input type="date" class="form-control form-control-sm P" id="txtFechaIngreso" required="required" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtFechaSalida">Fecha de salida</label>
                                    <input type="date" class="form-control form-control-sm" id="txtFechaSalida" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtEstadoPuesto" class="required">Estado</label>
                                    <div class="custom-control">
                                        <div class="custom-switch">
                                            <input type="checkbox" id="txtEstadoPuesto" checked>
                                            <label for="txtEstadoPuesto">Estado</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <input class="btn btn-success" type="button" id="btnAgregarPuesto" value="Guardar">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "programacioncovid";
    </script>
}
<!-- Modals end -->

<div class="content">
    <div class="title"><h5 id="tituloCovid"></h5></div>
    @*<div style="display:none">
            <input type="hidden" class="form-control form-control-sm E" id="txtIdTrabajador" readonly="readonly" />
            <input type="hidden" class="form-control form-control-sm E" id="txtIdPruebasCovid" placeholder="Codigo" readonly="readonly" />
        </div>*@
    <div class="form-row">
        <div class="col-sm-4">
            <label for="txtDocumentoTrabajador" class="required">N° Documento</label>
            <input type="text" class="form-control form-control-sm E" id="txtDocumentoTrabajador" placeholder="N° Documento" required="required" onkeypress="consulta(event)" />
        </div>
        <div class="col-sm-8">
            <label for="txtNombreTrabajador" class="required">Nombre Trabajador</label>
            <input type="text" class="form-control form-control-sm E" id="txtNombreTrabajador" placeholder="Nombre Trabajador" readonly="readonly" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-3" id="fechaPrueba" style="display:inline">
            <label for="txtFechaPrueba">Fecha de Programación de la Prueba</label>
            <input type="date" class="form-control form-control-sm E" id="txtFechaPrueba" style="visibility:visible" required="required" />
        </div>
        <div class="col-sm-3" id="numeroPrueba" style="display:inline">
            <label for="txtNumeroPrueba" class="required">N° Prueba </label>
            <input type="text" class="form-control form-control-sm E" id="txtNumeroPrueba" placeholder="N° Prueba" required="required" />
        </div>
        <div class="col-sm-3" id="resultadoPrueba" style="display:none">
            <label for="cboResultadoPrueba" class="required">Resultado de prueba</label>
            <select class="form-control form-control-sm E" id="cboResultadoPrueba"></select>
        </div>
    </div>
    <br />
    <br />
    <div class="text-right">
        <a href="#agregarpuestotrabajo-modal" class="btn btn-secondary" id="btnModalAgregar" role="button" style="visibility:hidden">Agregar Puesto</a>
        <input class="btn btn-primary" id="btnNuevo" type="button" value="Nuevo" style="visibility:hidden">
        <input class="btn btn-success" id="btnGrabar" type="button" value="Guardar">
        <input class="btn btn-success" id="btnExportar" type="button" value="Exportar a Excel">
    </div>

    <div class="form-row">
        <div class="col-sm-3" id="fechaResultados" style="display:inline">
            <label for="fechaResultados">Fecha de Resultados de Pruebas</label>
            <input type="date" class="form-control form-control-sm" id="txtfechaResultados" required="required" />
        </div>
        <div class="col-sm-3" id="cantidadPruebas">

        </div>
        <div class="col-sm-3" id="resultadosPruebas">

        </div>
    </div>
</div>
<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>

@section scripts{
    @Scripts.Render("~/Scripts/ConsultaProgramacionCovid.js")
}
