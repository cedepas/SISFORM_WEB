
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Modals start -->
@section modals{

    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "busquedaIncidencia";
    </script>

}

<!-- Modals end -->


<div class="content">
    <div class="form-row">
        <div class="col-sm">
            <div class="title"><h5>Busqueda de Incidencias</h5></div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-5">
            <label for="cboTipoFiltroIncidencia" class="required">Tipo de Filtro</label>
            <select class="form-control form-control-sm E" id="cboTipoFiltroIncidencia" placeholder="Tipo filtro incidencia"></select>
        </div>
        <div class="col-sm-4" style="display:none" id="buscarPorFecha">
            <label class="required">Selecionar Fecha a Buscar</label>
            <input type="date" class="form-control form-control-sm E" id="txtfechaIncidente" placeholder="Busqueda por Fecha" />
        </div>
        <div class="col-sm-4" style="display:none" id="buscarPorTrajador">
            <p>Digite los Datos del Trabajador</p>
            <input class="form-control form-control-sm" id="txtbuscarPorTrajador" />
            <br />
        </div>
        <div class="col-sm-4" style="display:none" id="buscarPorEmpresa">
            <p>Digite los datos de la Empresa</p>
            <input class="form-control form-control-sm" id="txtbuscarPorEmpresa" />
        </div>
    </div>
    <div class="form-row">
        <div class="text-right">
            <input class="btn btn-success E" type="button" id="btnBuscarIncidencias" value="Buscar">
            <button class="btn btn-primary" type="button" id="bntNuevo">Nuevo</button>
        </div>
    </div>
</div>
<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>

<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
@section scripts{
    @Scripts.Render("~/Scripts/BusquedaIncidencia.js")
}
