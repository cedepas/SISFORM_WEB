                                            <label for="txtBotiquinPrimerosAuxilios">Botiquin Primeros Auxilios</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <input class="btn btn-success" type="button" id="btnCriterio3" value="Guardar">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "empresas";
    </script>
