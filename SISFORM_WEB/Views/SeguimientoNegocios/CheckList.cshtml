@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Modals start -->
@section modals{

    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "gestionNegocios";
    </script>
}

<div class="content container">
    <div class="title"><h5 id="CheckList"></h5></div>
    <div class="form-row">
        <div>
            <label for="txtbuscarPorEmpresa" class="required">Digite los datos de la empresa a realizar el checkList</label>
            <input type="text" class="form-control form-control-sm E" id="txtbuscarPorEmpresa" placeholder="Nombre Empresa" required="required" />
        </div>
    </div>
    <div class="form-row row" id="datosServicio" style="display:none">
        <div>
            <label class="col-sm-3">Tipo Empresa</label>
            <input type="text" id="nombreTipoEmpresa" disabled />
            <label class="col-sm-3">Tipo Servicio</label>
            <input type="text" id="nombreTipoServicio" disabled />
            <label class="col-sm-3">Número de Evaluación</label>
            <input type="text" id="nroEvaluacion" disabled />
            <label class="col-sm-3">Version de CheckList</label>
            <input type="text" id="versionCheckList" disabled />
            <label class="col-sm-3">Unidad de Gestion</label>
            <input type="text" id="UnidadGestion" disabled />
            <br />
            <br />
            <label for="txtFechaCheckList">Fecha de CheckList</label>
            <input type="date" class="form-control form-control-sm E" id="txtFechaCheckList" style="visibility:visible" required="required" />
        </div>
    </div>
    <div class="form-row" id="tipoServicio" style="display:none">
        <div>
            <label for="cboTipoServicio" class="required">Seleccione el tipo de operacion</label>
            <select class="form-control form-control-sm" id="cboTipoServicio"></select>
        </div>
    </div>
    <fieldset>
        <legend>Listado de Items</legend>
        <div id="preguntas">
        </div>
    </fieldset>
    <br />
    <br />
    <div class="form-row">
        <div class="col-sm-4">
            <button class="btn btn-success" type="button" id="btnGrabarCheckList">Grabar CheckList</button>
            <button class="btn btn-primary" type="button" id="bntNuevo">Nuevo</button>
        </div>
    </div>
</div>
<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
@section scripts{
    @Scripts.Render("~/Scripts/ConsultaCheckList.js")
}
