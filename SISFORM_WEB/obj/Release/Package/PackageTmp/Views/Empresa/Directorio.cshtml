@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "directorioECM";
</script>
<!-- Modals start -->
<div class="content">
    <div class="title"><h5>Registro de Directorio de ECM</h5></div>
    <div class="form-row">
        <div class="col-sm-4">
            <label for="txtNombreECM" class="required">Nombre ECM</label>
            <input type="text" class="form-control form-control-sm E" id="txtNombreECM" placeholder="Nombre ECM" required="required" />
        </div>
        <div class="col-sm-4">
            <label for="txtNombreContacto" class="required">Nombre Contacto</label>
            <input type="text" class="form-control form-control-sm E" id="txtNombreContacto" placeholder="Nombre Contacto" required="required" />
        </div>
        <div class="col-sm-4">
            <label for="txtCargo" class="required">Cargo</label>
            <input type="text" class="form-control form-control-sm E" id="txtCargo" placeholder="Cargo" required="required" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4">
            <label for="txtTelefono" class="required">Telefono</label>
            <input type="text" class="form-control form-control-sm E" id="txtTelefono" placeholder="Telefono" required="required" />
        </div>
        <div class="col-sm-4">
            <label for="txtEmail" class="required">Email</label>
            <input type="text" class="form-control form-control-sm E" id="txtEmail" placeholder="Email" required="required" />
        </div>
        <div class="col-sm-4">
            <label for="txtEstado" class="required">Estado</label>
            <div class="custom-control">
                <div class="custom-switch">
                    <input type="checkbox" id="txtEstado" checked>
                    <label for="txtEstado">Estado</label>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <input class="btn btn-primary" id="btnNuevo" type="button" value="Nuevo">
        <input class="btn btn-success" id="btnGrabar" type="button" value="Guardar">
    </div>
</div>
<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>

@section scripts{
    @Scripts.Render("~/Scripts/ConsultaDirectorioECM.js")
}
