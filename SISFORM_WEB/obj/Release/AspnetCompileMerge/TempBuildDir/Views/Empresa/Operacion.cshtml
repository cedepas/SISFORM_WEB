<!-- Modals start -->
@section modals{
    <div class="modal modal-full ie-scroll-fix" id="observacion-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content w-lg-auto">
                <a href="#" class="close" role="button" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 offset-sm-1">
                            <h5 class="modal-title">Registro de observaciones</h5>
                            <div class="form-row">
                                <div class="col-sm">
                                    <label for="txtIdProgreso">Codigo</label>
                                    <input type="text" class="form-control form-control-sm O" id="txtIdProgreso" placeholder="Codigo" readonly="readonly">
                                </div>
                                <div class="col-sm">
                                    <label for="txtObservaciones" class="required">Observacion</label>
                                    <input type="text" class="form-control form-control-sm O" id="txtObservaciones" placeholder="Codigo" required="required">
                                </div>
                                <div class="col-sm">
                                    <label for="txtFechaVisita" class="required">Fecha de visita</label>
                                    <input type="date" class="form-control form-control-sm O" id="txtFechaVisita" required="required" />
                                </div>
                                <div class="col-sm">
                                    <label for="txtEstadoObs" class="required">Estado Obs</label>
                                    <div class="custom-control">
                                        <div class="custom-switch">
                                            <input type="checkbox" id="txtEstadoObs" checked>
                                            <label for="txtEstadoObs">Estado Obs</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <input class="btn btn-success" type="button" id="btnObservacion" value="Guardar">
                            </div>
                        </div>
                    </div>
                    <hr class="mb-10" />
                    <div class="row">
                        <div class="card p-0 bg-very-dark-dm">
                            <div id="divTablaObs" class="table-responsive">
                                <table id="tablaDatos" class="table table-inner-bordered">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
