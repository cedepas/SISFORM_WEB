@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section modals{
    <script>
        var siteActive = document.getElementById("docs-section-id");
        siteActive.value = "CartaPreocupacion";
    </script>
}
<div class="content">
    <div class="title"><h5>Carta Preocupación</h5></div>
    <div class="form-row">
        <div class="col-sm-4">
            <label for="txtbuscarPorEmpresa" class="required">Nombre la ECM</label>
            <input type="text" class="form-control form-control-sm E" id="txtbuscarPorEmpresa" placeholder="Nombre Empresa" required="required" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-3">
            <label for="txtFechaInspeccion">Fecha de Carta de Preocupacion</label>
            <input type="date" class="form-control form-control-sm E" id="txtFechaCarta" required="required" />
        </div>
    </div>
    <div class="form-row" id="listadoIncidencias" style="display:none">
        <div class="col-sm-9 text-center">
            <div class="text-right">
                <label>N° de Incidencias: </label>
                <label id="lblNumeroIncidencias"></label>
            </div>
            <fieldset>
                <legend>Listado de Incidencias</legend>
                <table class="table" id="tablaIncidencias">
                    <thead id="IncidenciasEmpresa">
                    </thead>
                    <tbody id="IncidenciasDeLaEmpresa">
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4">
            @*<a href="#verificarCarta-modal" class="btn btn-secondary" id="btnVerificarCarta" role="button">Verificar Carta</a>*@
            <a id="btnVerificarCarta" href="@Url.Action("_CartaPreocupacionPV", "Carta")"
               class="btn btn-secondary" role="button"
                <span class="name">Vizualizar Carta</span>
            </a>
            <button class="btn btn-primary" type="button" id="bntNuevo">Nuevo</button>
        </div>
    </div>
</div>

<div class="content">
    <hr class="mb-20" />
</div>
<div class="mw-full">
    <div class="card p-0 bg-very-dark-dm">
        <div id="divTabla" class="table-responsive">
            <table id="tablaDatos" class="table table-inner-bordered">
            </table>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
@section scripts{
    @Scripts.Render("~/Scripts/ConsultaCartaPreocupacion.js")
}
